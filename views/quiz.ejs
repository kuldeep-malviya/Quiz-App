<%- include("header") %>

<style>
    body {
        background: #f4f6f9;
    }

    .quiz-container {
        max-width: 900px;
        margin: auto;
        background: #fff;
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0 10px 25px rgba(0,0,0,0.1);
    }

    .question-box {
        padding: 20px;
        margin-bottom: 20px;
        border-radius: 12px;
        background: #f8f9fa;
    }

    .question-box p {
        font-weight: 600;
        font-size: 1.1rem;
    }

    .option {
        padding: 10px 15px;
        margin-bottom: 10px;
        border-radius: 8px;
        cursor: pointer;
        border: 1px solid #ddd;
        transition: 0.2s;
    }

    .option:hover {
        background: #e9f5ff;
        border-color: #0d6efd;
    }

    .option input {
        margin-right: 10px;
    }

    .submit-btn {
        font-size: 1.2rem;
        padding: 12px 40px;
        border-radius: 30px;
    }
</style>

<h1 class="text-center my-5 fw-bold">ðŸ§  Start Quiz</h1>

<form action="/quiz/submit" method="post">
    <div class="quiz-container">

        <% questions.forEach((qsn, ind) => { %>
            <div class="question-box">
                <p><%= ind + 1 %>. <%= qsn.question %></p>

                <% qsn.options.forEach((opt, index) => { %>
                    <label class="option d-block">
                        <input 
                            type="radio" 
                            name="<%= qsn._id %>" 
                            value="<%= index %>" 
                            required
                        >
                        <%= opt %>
                    </label>
                <% }) %>
            </div>
        <% }) %>

        <div class="text-center">
            <button class="btn btn-success submit-btn">
                Submit Quiz âœ…
            </button>
        </div>

    </div>
</form>

<%- include("footer") %>
