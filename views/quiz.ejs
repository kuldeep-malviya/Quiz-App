<%- include("header") %>

<h1 class="text-center my-5 ">Start Quiz</h1>
<form action="/quiz/submit" method="post">
    
    <div class="container mx-auto w-75">
        <% questions.forEach((qsn,ind) => { %>
         <p class="my-2"> <%=ind+1 %>.<%= qsn.question %></p>
         <% qsn.options.forEach((opt,index) => { %>
            <label >
               <input type="radio" name="<%= qsn._id %>" value="<%= index %>">
            </label>
            <%= opt %> <br>
          
         <% }) %>
    
    
    <br>
    
    
        <% }) %>
    
        <button class="btn btn-success px-5">Submit</button>
</form>

</div>

<%- include("footer") %>
