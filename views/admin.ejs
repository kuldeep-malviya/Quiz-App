<%- include("header") %>

<style>
    body {
        background: #f1f3f6;
    }

    .admin-title {
        font-weight: 700;
        letter-spacing: 1px;
    }

    .admin-card {
        background: #fff;
        border-radius: 15px;
        padding: 25px;
        box-shadow: 0 10px 25px rgba(0,0,0,0.1);
    }

    .add-btn {
        border-radius: 30px;
        font-size: 1.1rem;
        padding: 10px 35px;
    }

    table thead {
        background: #212529;
        color: #fff;
    }

    table th, table td {
        vertical-align: middle;
        text-align: center;
        font-size: 0.95rem;
    }

    .question-text {
        text-align: left;
        font-weight: 600;
    }

    .delete-btn {
        border-radius: 50%;
        padding: 5px 10px;
        font-weight: bold;
    }
</style>

<h1 class="text-center my-4 admin-title">‚öôÔ∏è Admin Dashboard</h1>

<div class="container my-5">
    <div class="admin-card">

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h4 class="mb-0">üìã Quiz Questions</h4>
            <a href="/admin/add-qsn" class="btn btn-success add-btn">
                ‚ûï Add Question
            </a>
        </div>

        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Sr</th>
                        <th>Question</th>
                        <th>Option 1</th>
                        <th>Option 2</th>
                        <th>Option 3</th>
                        <th>Option 4</th>
                        <th>Correct</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% questions.forEach((qsn, ind) => { %>
                        <tr>
                            <td><%= ind + 1 %></td>

                            <td class="question-text"><%= qsn.question %></td>

                            <% qsn.options.forEach(option => { %>
                                <td><%= option %></td>
                            <% }) %>

                            <td>
                                <span class="badge bg-success">
                                    <%= qsn.correctAns %>
                                </span>
                            </td>

                            <td>
                                <form 
                                    action="/admin/rm-qsn/<%= qsn._id %>" 
                                    method="post"
                                    onsubmit="return confirm('Delete this question?')"
                                >
                                    <button class="btn btn-danger delete-btn">
                                        ‚úï
                                    </button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>

    </div>
</div>

<%- include("footer") %>
