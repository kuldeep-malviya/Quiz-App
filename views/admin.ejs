<%- include("header") %>

<h1 class="text-center">Admin page</h1>


<div class="container my-5 text-center">

  <a href="/admin/add-qsn" class="btn btn-success px-5 mx-auto my-5">Add Questions</a>
    <table class="table">
  <thead>
    <tr>
      <th scope="col">Sr</th>
      <th scope="col">question</th>
      <th scope="col">option 1</th>
      <th scope="col">option 2</th>
      <th scope="col">option 3</th>
      <th scope="col">option 4</th>
      <th scope="col">Answer</th>
      <th scope="col">Action</th>

    </tr>
  </thead>
  <tbody>
    <% questions.forEach((qsn,ind) => { %>
     <tr>
      <th scope="row"><%= ind+1  %></th>
      
      <td><%= qsn.question %></td>
      <% qsn.options.forEach(option => { %>
        <td> <%= option %></td> 
      <% }) %>
        <td><%= qsn.correctAns %></td>
        <td><form action="/admin/rm-qsn/<%= qsn._id %>" method="post">
          <button class="btn btn-danger">x</button>
        </form></td>

      
      
    </tr>
    <% }) %>
  </tbody>
</table>
</div>
<%- include("footer") %>
