<%- include("header") %>

<style>
    body {
        background: #f1f3f6;
    }

    .add-title {
        font-weight: 700;
        letter-spacing: 1px;
    }

    .form-card {
        max-width: 800px;
        margin: auto;
        background: #212529;
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.3);
    }

    .form-card input {
        padding: 12px;
        border-radius: 8px;
    }

    .form-card label {
        font-size: 0.95rem;
        opacity: 0.9;
    }

    .add-btn {
        font-size: 1.1rem;
        padding: 12px;
        border-radius: 30px;
        margin-top: 10px;
    }
</style>

<h1 class="text-center my-4 add-title">➕ Add New Question</h1>

<form action="/admin/add" method="post" class="form-card">

    <input 
        type="text" 
        name="question" 
        placeholder="Enter question"
        class="form-control my-3"
        required
    >

    <input type="text" name="option1" placeholder="Option 1" class="form-control my-3" required>
    <input type="text" name="option2" placeholder="Option 2" class="form-control my-3" required>
    <input type="text" name="option3" placeholder="Option 3" class="form-control my-3" required>
    <input type="text" name="option4" placeholder="Option 4" class="form-control my-3" required>

    <label class="text-light">
        Correct Answer Index (0 = Option1, 1 = Option2, 2 = Option3, 3 = Option4)
    </label>

    <input 
        type="number" 
        name="correct" 
        min="0" 
        max="3"
        class="form-control my-3"
        required
    >

    <button class="btn btn-success w-100 add-btn">
        ✅ Add Question
    </button>
</form>

<%- include("footer") %>
